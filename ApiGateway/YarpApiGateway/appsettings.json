{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {

      // Claim Warranty
      "claim-warrenty-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Claims/{**rest}" } ]
      },
      "claim-items-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/ClaimItems/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/ClaimItems/{**rest}" } ]
      },
      "supply-part-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/SupplyParts/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/SupplyParts/{**rest}" } ]
      },
      "technician-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Technicians/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Technicians/{**rest}" } ]
      },
      "work-orders-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/WorkOrders/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/WorkOrders/{**rest}" } ]
      },
      "claim-warrenty-swagger": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      },

      // vehicle
      "vehicle-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/vehicles/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/vehicles/{**rest}" }
        ]
      },

      "vehicle-customer-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/customers/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/customers/{**rest}" }
        ]
      },

      "vehicle-parts-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/VehicleParts/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/VehicleParts/{**rest}" }
        ]
      },

      "vehicle-swagger": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/vehicles/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      },

      //part
      "partcatalog-api": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/Parts/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Parts/{**rest}" } ]
      },
      "partcatalog-swagger": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/Parts/swagger/{**rest}" },
        "Transforms": [ { "PathPattern": "/swagger/{**rest}" } ]

      },
      //user
      "user-api": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/auth/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/auth/{**rest}" }
        ]
      },

      "auth-api": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/Users/{**rest}" }
        ]

      },
      "user-swagger": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      }
    },
    "Clusters": {
      "claim-cluster": {
        "Destinations": {
          "d1": { "Address": "http://warrantyClaimAPI:8080/" }
        }
      },
      "partcatalog-cluster": {
        "Destinations": {
          "d1": { "Address": "http://partCatalogAPI:8080/" }
        }
      },
      "vehicle-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://vehicleAPI:8080/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://userAPI:8080/"
          }
        }
      }
    }
  },
  "SwaggerSources": {
    "WarrantyClaim": "/api/claims/swagger/v1/swagger.json",
    "VehicleClaim": "/api/vehicles/swagger/v1/swagger.json",
    "PartCatalog": "/api/parts/swagger/v1/swagger.json",
    "User": "/api/users/swagger/v1/swagger.json"
  }
}
