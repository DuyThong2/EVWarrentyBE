{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "claim-warrenty-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/Claims/{**rest}" }
        ]
      },
      "claim-warrenty-swagger": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      },

      //user
      "user-api": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/Users/{**rest}" }
        ]
      },
      "user-swagger": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      }
    },
    "Clusters": {
      "claim-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://warrantyclaimAPI:8080/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://userAPI:8080/"
          }
        }
      }
    }
  },
  "SwaggerSources": {
    "WarrantyClaim": "/api/claims/swagger/v1/swagger.json",
    "User": "/api/users/swagger/v1/swagger.json"
  }
}
