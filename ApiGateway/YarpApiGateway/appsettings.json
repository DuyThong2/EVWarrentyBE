{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "SecretKey": "ThisIsAVeryLongAndVerySafeLineofCode",
    "Issuer": "EVWIssuer",
    "Audience": "EVWAudience",
    "ExpirationInMinutes": "60"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {

      // Claim Warranty
      "claim-warrenty-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Claims/{**rest}" } ]
      },
      "claim-items-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/ClaimItems/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/ClaimItems/{**rest}" } ]
      },
      "supply-part-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/SupplyParts/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/SupplyParts/{**rest}" } ]
      },
      "technician-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Technicians/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Technicians/{**rest}" } ]
      },
      "work-orders-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/WorkOrders/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/WorkOrders/{**rest}" } ]
      },

      "claim-upload-api": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/ClaimUploads/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/ClaimUploads/{**rest}" } ]
      },
      "claim-warrenty-swagger": {
        "ClusterId": "claim-cluster",
        "Match": { "Path": "/api/Claims/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      },

      // vehicle
      "vehicle-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/vehicles/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/vehicles/{**rest}" }
        ]
      },

      "vehicle-image-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/VehicleImages/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/VehicleImages/{**rest}" }
        ]
      },

      "appointment-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/Appointments/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/Appointments/{**rest}" }
        ]
      },
      "vehicle-customer-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/customers/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/customers/{**rest}" }
        ]
      },

      "vehicle-parts-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/VehicleParts/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/VehicleParts/{**rest}" }
        ]
      },

      "warranty-histories-api": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/WarrantyHistories/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/WarrantyHistories/{**rest}" }
        ]
      },

      "vehicle-swagger": {
        "ClusterId": "vehicle-cluster",
        "Match": { "Path": "/api/vehicles/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      },


      //part
      "partcatalog-api": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/Part/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Part/{**rest}" } ]
      },

      "partCategory-api": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/category/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/category/{**rest}" } ]
      },

      "warranty-policy-api": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/WarrantyPolicy/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/WarrantyPolicy/{**rest}" } ]
      },

      "package-api": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/Package/{**rest}" },
        "Transforms": [ { "PathPattern": "/api/Package/{**rest}" } ]
      },

      "partcatalog-swagger": {
        "ClusterId": "partcatalog-cluster",
        "Match": { "Path": "/api/Part/swagger/{**rest}" },
        "Transforms": [ { "PathPattern": "/swagger/{**rest}" } ]

      },
      //user
      "user-api": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/auth/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/auth/{**rest}" },
          { "RequestHeadersCopy": "true" }
        ]
      },

      "auth-api": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/{**rest}" },
        "Transforms": [
          { "PathPattern": "/api/Users/{**rest}" }
        ]

      },
      "user-swagger": {
        "ClusterId": "user-cluster",
        "Match": { "Path": "/api/Users/swagger/{**rest}" },
        "Transforms": [
          { "PathPattern": "/swagger/{**rest}" }
        ]
      }
    },
    "Clusters": {
      "claim-cluster": {
        "Destinations": {
          "d1": { "Address": "http://warrantyClaimAPI:8080/" }
        }
      },
      "partcatalog-cluster": {
        "Destinations": {
          "d1": { "Address": "http://partCatalogAPI:8080/" }
        }
      },
      "vehicle-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://vehicleAPI:8080/"
          }
        }
      },
      "user-cluster": {
        "Destinations": {
          "d1": {
            "Address": "http://userAPI:8080/"
            //"Address": "http://localhost:5185/"
          }
        }
      }
    }
  },
  "SwaggerSources": {
    "WarrantyClaim": "/api/claims/swagger/v1/swagger.json",
    "VehicleClaim": "/api/vehicles/swagger/v1/swagger.json",
    "PartCatalog": "/api/part/swagger/v1/swagger.json",
    "User": "/api/users/swagger/v1/swagger.json"
  }
}
